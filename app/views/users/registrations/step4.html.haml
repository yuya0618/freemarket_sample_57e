                    %option{value: "沖縄県"} 沖縄県
            .form-group
              %label{for: "adress_city"} 市区町村
              %span.form-require 必須
              %input.input-default{ name: "nickname", placeholder: "例) 横浜市緑区", type: "text", value: ""}/
              -# = f.text_field :adress_city, placeholder: "例）横浜市緑区", class: "input-default"
            .form-group
              %label{for: "adress_number"} 番地
              %span.form-require 必須
              %input.input-default{ name: "adress_number", placeholder: "例) 横浜市緑区", type: "text", value: ""}/
              -# = f.text_field :adress_number, placeholder: "例）123-456", class: "input-default"
            .form-group
              %label{for: "building"} 建物名
              %span.form-more 任意
              %input.input-default{ name: "nickname", placeholder: "例) 柳ビル103", type: "text", value: ""}/
              -# = f.text_field :building, placeholder: "例）柳ビル103", class: "input-default"
            %button.btn-default.btn-red
              = link_to '次へ'
